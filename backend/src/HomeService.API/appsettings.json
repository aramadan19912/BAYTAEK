{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=HomeServiceDB;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=True;",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyForJWTTokenGeneration123456789",
    "Issuer": "HomeServiceAPI",
    "Audience": "HomeServiceClient",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7
  },
  "SemanticKernel": {
    "OpenAI": {
      "ApiKey": "your-openai-api-key",
      "ModelId": "gpt-4",
      "EmbeddingModelId": "text-embedding-ada-002"
    },
    "AzureOpenAI": {
      "Endpoint": "https://your-resource.openai.azure.com",
      "ApiKey": "your-azure-openai-key",
      "DeploymentName": "your-deployment-name"
    }
  },
  "RegionSettings": {
    "SaudiArabia": {
      "Currency": "SAR",
      "VatPercentage": 15,
      "DefaultLanguage": "Arabic"
    },
    "Egypt": {
      "Currency": "EGP",
      "VatPercentage": 14,
      "DefaultLanguage": "Arabic"
    }
  },
  "Stripe": {
    "PublishableKey": "pk_test_your-stripe-publishable-key",
    "SecretKey": "sk_test_your-stripe-secret-key",
    "WebhookSecret": "whsec_your-webhook-secret"
  },
  "PaymentGateways": {
    "Paytabs": {
      "ProfileId": "your-paytabs-profile-id",
      "ServerKey": "your-paytabs-server-key",
      "Region": "SAU"
    },
    "Fawry": {
      "MerchantCode": "your-fawry-merchant-code",
      "SecurityKey": "your-fawry-security-key"
    }
  },
  "SMS": {
    "Provider": "Twilio",
    "Twilio": {
      "AccountSid": "your-twilio-account-sid",
      "AuthToken": "your-twilio-auth-token",
      "PhoneNumber": "+1234567890"
    },
    "Unifonic": {
      "AppSid": "your-unifonic-app-sid"
    }
  },
  "Email": {
    "Provider": "SendGrid",
    "SendGrid": {
      "ApiKey": "your-sendgrid-api-key",
      "FromEmail": "noreply@homeservice.com",
      "FromName": "Home Service"
    }
  },
  "Firebase": {
    "ServerKey": "your-firebase-server-key",
    "SenderId": "your-firebase-sender-id"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
